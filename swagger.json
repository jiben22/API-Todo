        "/tag": {
            "post": {
                "tags": [
                    "Tag"
                ],
                "summary": "Création d'un nouveau tag",
                "parameters": [{
                    "name": "tag",
                    "in": "body",
                    "description": "Le tag que vous voulez créer",
                    "schema": {
                        "$ref": "#/definitions/Tag"
