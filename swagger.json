                    "type": "string"
                },
                "dateBegin": {
                    "type": "string",
                    "format": "date"
                },
                "dateEnd": {
                    "type": "string",
                    "format": "date"
                },
                "statut": {
                    "type": "string"
                },
                "tags": {
