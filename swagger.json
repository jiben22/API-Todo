            },
            "put": {
                "summary": "Mise à jour du tag en renseignant son ID",
                "tags": [
                    "Tag"
                ],
                "parameters": [{
                    "name": "tag",
                    "in": "body",
                    "description": "Le tag est mis à jour avec ses nouvelles valeurs",
