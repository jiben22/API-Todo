                "parameters": [{
                    "name": "todo",
                    "in": "body",
                    "description": "La tâche est mise à jour avec ses nouvelles valeurs",
                    "schema": {
                        "$ref": "#/definitions/Todo"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "La tâche est mise à jour",
                        "schema": {
                            "$ref": "#/definitions/Todo"
